# AISuite MCP Environment Configuration
# Copy this file to .env and update with your API keys and configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_here  # Optional

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# xAI Configuration (Grok)
XAI_API_KEY=your_xai_api_key_here
XAI_API_BASE=https://api.x.ai/v1

# Logging Configuration
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Tool Configuration
# Set to true to enable demo search tool
ENABLE_SEARCH_TOOL=false

# Default Models Configuration
# These are used if not specified in the review spec
DEFAULT_GENERATOR_MODEL=openai:gpt-4o
DEFAULT_REVIEWER_MODEL=anthropic:claude-3-7-sonnet-20250219

# Anthropic Reasoning Configuration
# Settings for enhanced reasoning with Claude 3.7 Sonnet
ANTHROPIC_REASONING_ENABLED=true
ANTHROPIC_TEMPERATURE=0.2

# Performance Configuration
# Maximum time in seconds to wait for a response
REQUEST_TIMEOUT=60
MAX_RETRIES=3
